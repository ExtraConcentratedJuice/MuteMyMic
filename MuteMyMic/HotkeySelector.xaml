<Window x:Class="MuteMyMic.HotkeySelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuteMyMic"
        mc:Ignorable="d"
        Title="HotkeySelector" Height="120" Width="250" Background="#2D2D30" ResizeMode="NoResize"
        WindowStyle="None">
    <Grid>
        <Label Content="Input a hotkey. Press ESC to finalize." HorizontalAlignment="Center" Margin="0,10,0,0" 
               VerticalAlignment="Top" Width="230" Foreground="White"/>
        <TextBox x:Name="HotkeyBox" HorizontalAlignment="Center" Height="21" Text="TextBox" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="230" Margin="0,41,0,0" PreviewKeyDown="OnHotkeyBoxPreviewKeyDown"
                 MouseDoubleClick="OnHotkeyBoxDoubleClicked" IsReadOnly="true"/>
        <Button x:Name="DoneButton" Content="Done" HorizontalAlignment="Left" Height="22" Margin="181,81,0,0" 
                VerticalAlignment="Top" Width="59" Click="OnDoneButtonClicked"/>
    </Grid>
</Window>
